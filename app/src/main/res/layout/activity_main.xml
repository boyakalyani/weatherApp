<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_6"
    tools:context=".MainActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="360dp"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/img_5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weather"
        android:textStyle="bold"
        android:textColor="#ffff00"
        android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#3333ff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/city_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cityname"
                android:textStyle="bold"
                android:textColor="#ffff00"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/coord_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latitude.long latitude"
                android:textStyle="bold"
                android:textColor="#996600"
                android:textSize="20dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        app:cardCornerRadius="10dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="230dp"
        android:backgroundTint= "#305442"
        >
        <TextView
            android:id="@+id/weather_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weather"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffff00"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardCornerRadius="10dp"
            android:layout_height="55dp"
            android:layout_marginTop="230dp"
            android:backgroundTint= "#305442"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/temp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp"
                android:textColor="#ffff00"
                android:textSize="20dp"
               />
            <TextView
                android:id="@+id/maxMin_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min-temp,max-temp"
                android:textSize="16dp"
                android:textColor="#996600"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        app:cardCornerRadius="10dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="360dp"
        android:backgroundTint= "#305442"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/num1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="#ffff00"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/prs_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textColor="#996600"
                android:textSize="20dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            app:cardCornerRadius="10dp"
            android:layout_height="55dp"
            android:layout_marginTop="360dp"
            android:backgroundTint= "#305442"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/num2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="#ffff00"
                android:textSize="23dp"
                />
            <TextView
                android:id="@+id/hum_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textColor="#996600"
                android:textSize="18dp"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint= "#305442"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="45dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/speed_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textColor="#ffff00"
                android:textSize="27dp"
                />
            <TextView
                android:id="@+id/wspD_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wind speed    Degree......"
                android:textSize="20dp"
                android:textColor="#996600"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>